<Controls:MetroWindow
    x:Class="FollowManager.MainWindow.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FollowManager.MainWindow"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="FollowManager"
    Width="832"
    Height="624"
    MinWidth="832"
    MinHeight="624"
    d:DataContext="{d:DesignInstance {x:Type local:MainWindowViewModel},
                                     IsDesignTimeCreatable=False}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    BorderBrush="{DynamicResource AccentColorBrush}"
    FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
    ResizeMode="CanResizeWithGrip"
    TitleCaps="False"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="23" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Menu
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="30"
            Background="{StaticResource LightGrayPaper}">
            <MenuItem Height="30" Header="ファイル">
                <MenuItem Header="終了" />
                <MenuItem Header="再起動" />
            </MenuItem>
            <MenuItem Height="30" Header="アカウント">
                <MenuItem Command="{Binding OpenConfigureApiKeyViewCommand}" Header="アカウントを追加" />
                <MenuItem Header="アカウントを管理" />
            </MenuItem>
            <MenuItem Height="30" Header="タブ">
                <MenuItem Header="新規アカウントタブ" />
                <MenuItem Header="新規比較タブ" />
                <MenuItem Header="新規依存関係グラフタブ" />
                <MenuItem Header="新規カスタムタブ" />
            </MenuItem>
            <MenuItem Height="30" Header="ツール">
                <MenuItem Header="再読み込み" />
                <MenuItem Header="データの再取得" />
                <MenuItem Command="{Binding OpenSettingViewCommand}" Header="設定" />
            </MenuItem>
            <MenuItem Height="30" Header="ヘルプ">
                <MenuItem Header="使い方のヒント" />
                <MenuItem Command="{Binding OpenAboutViewCommand}" Header="FollowManagerについて" />
            </MenuItem>
        </Menu>

        <ContentControl
            Grid.Row="1"
            Grid.Column="0"
            Width="300"
            prism:RegionManager.RegionName="SideRegion" />

        <ContentControl
            Grid.Row="1"
            Grid.Column="1"
            prism:RegionManager.RegionName="ContentRegion" />

        <ContentControl
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="23"
            prism:RegionManager.RegionName="BottomRegion" />
    </Grid>
</Controls:MetroWindow>
